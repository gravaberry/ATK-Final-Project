

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Barang Masuk ATK</h3>
    </div>
    <form action="/barang-masuk/proses-input" method="post">
       <div class="card-body">
        <div class="row">
          <div class="col-lg-12">
            <div class="col-lg-12">
              <div class="row">
                <div class="col-lg-6">
                  <div class="mb-3">
                    <label class="form-label fw-bold text-capitalize"
                      >Jenis Barang</label
                    >
                    <select
                      name="f_nama_barang"
                      class="form-select form-control"
                      required
                    >
                      <option value="" selected>pilih Jenis Barang</option>
                      <% jenis_barang.forEach(jb => { %>
                      <option value="<%= jb.kode %>"><%= jb.nama_barang %></option>
                      <% }) %>
                    </select>
                  </div>
                </div>
        
                <div class="col-lg-3">
                  <div class="mb-3">
                    <label class="form-label fw-bold text-capitalize"
                      >Jumlah stok masuk</label
                    >
                    <input
                      type="number"
                      class="form-control"
                      name="f_stok_awal"
                      required
                    />
                  </div>
                </div>
                <div class="col-lg-3">
                  <div class="mb-3">
                    <label class="form-label fw-bold text-capitalize">Satuan</label>
                    <select name="f_satuan" class="form-select form-control" required>
                      <option value="" selected>pilih Satuan</option>
                      <% satuan.forEach(g => { %>
                      <option value="<%= g.kode %>"><%= g.nama_satuan %></option>
                      <% }) %>
                    </select>
                  </div>
                </div>
              </div>
              <div class="col-lg-12">
                <div class="mb-3">
                  <label class="form-label fw-bold text-capitalize"
                    >Keterangan</label
                  >
                  <input
                    type="text"
                    class="form-control"
                    name="f_keterangan"
                    
                  />
                </div>
              </div>
              <button type="submit" class="btn btn-primary mt-4">Simpan</button>
        
            </div>
            
          </div>
       </div>
      </form>
<hr>
      
    <div class="col-12 pt-3">
      <div class="row">
          <div class="col-lg-12">
              <table id="myTable" class="table table-hover">
                  <thead>
                      <tr>
                          <th>No</th>
                          <th>Nama Barang</th>
                          <th>Stok Masuk</th>
                          <th>satuan</th>
                          <th>Tanggal Masuk</th>
                          <th>Keterangan</th>
                      </tr>
                  </thead>
                  <tbody>
                      <% for( let i=0; i < stok_masuk.length; i++) { %>
                          <tr>
                              <td><%= i + 1 %></td>
                              <td><%= stok_masuk[i].nama_barang %></td>
                              <td><%= stok_masuk[i].stok_awal %></td>
                              <td><%= stok_masuk[i].nama_satuan %></td>
                              <td><%= stok_masuk[i].createad_at.toLocaleDateString('id-ID') %></td>
                              <td><%= stok_masuk[i].keterangan %></td>
                             
                              </td>
                          </tr>
                      <% } %>
                  </tbody>
                  
              </table>
          </div>
      </div>
  </div>
</div>